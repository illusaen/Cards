{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": [
      "ES2019"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
